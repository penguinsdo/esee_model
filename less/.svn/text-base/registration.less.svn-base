/*!
 * esee_model registration 1.0.0
 */

// Reset
@import "venders/normalize.less";
// Components that this page dependent on.
@import "components/header.less";
@import "components/footer.less";
body {
    min-width: 1250px;
}

a {
    color: inherit;
    text-decoration: none;
}

.container {
    width: 1200px;
    position: relative;
    left: 50%;
    transform: translateX(-50%);
}

input[type=text],
input[type=number],
input[type=tel],
select {
    height: 36px;
    padding-left: 20px;
    line-height: 36px;
    border: 1px solid #A0A0A0;
    background-color: #FFFFFF;
    outline: none;
}

select {
    border-radius: 0;
    appearance: none;
    -webkit-appearance: none;
    -moz-appearance: none;
    background: url(../img/select-more.png) no-repeat right;
}

input[type=image] {
    height: 330px;
    width: 270px;
    margin-right: 10px;
    background-color: #FFFFFF;
    border: 2px dashed #A0A0A0;
    outline: none;
}

button[type=button] {
    height: 60px;
    width: 180px;
    font-size: 22px;
    outline: none;
}

.title {
    text-align: center;
    margin-bottom: 40px;
    padding-top: 24px;
    padding-bottom: 24px;
    border-bottom: 1px solid #A0A0A0;
    h2 {
        font-size: 16px;
        font-weight: normal;
        text-transform: uppercase;
        letter-spacing: 10px;
    }
}

.registration {
    background: url(../img/registration-bg.jpg) no-repeat right top;
    .reg-1,
    .reg-2 {
        border: none;
        h3 {
            width: 120px;
            margin-top: 26px;
            padding-bottom: 16px;
            border-bottom: 2px solid #000000;
            font-size: 20px;
        }
        .content {
            width: 690px;
            background-color: #FFFFFF;
            padding: 30px 30px 0 0;
            .form-group {
                margin-bottom: 20px;
                label {
                    display: block;
                    float: left;
                    width: 120px;
                    font-size: 18px;
                    line-height: 40px;
                }
                input[type=text],
                input[type=number],
                input[type=tel] {
                    width: 538px;
                }
                select {
                    width: 560px;
                }
                &.sel-2 select {
                    width: 277px;
                }
            }
        }
        .upload-pic {
            margin-top: -20px;
            border-top: 20px solid #fff;
            border-right: 30px solid #FFFFFF;
            border-bottom: 30px solid #FFFFFF;
            background: #fff;
            width: 990px;
            label {
                display: block;
                float: left;
                width: 120px;
                font-size: 18px;
                line-height: 40px;
            }
        }
        .button-group {
            margin-top: 50px;
            text-align: center;
            button.return {
                margin-right: 20px;
                background-color: #FFFFFF;
                border: 1px solid #000000;
                &:hover {
                    background-color: #EEEEEE;
                }
                &:active {
                    background-color: #F6F6F6;
                    border-color: #A0A0A0;
                    color: #A0A0A0;
                }
            }
            button.submit {
                background-color: #CBA06B;
                border: none;
                color: #FFFFFF;
                &:hover {
                    background-color: #d5ad7b;
                }
                &:active {
                    background-color: #E6BE83;
                }
            }
        }
    }
    .reg-1 .content{
        border-bottom: 30px solid #FFFFFF;
    }
}