/*!
 * esee_model entry 1.0.0
 */

// Reset
@import "venders/normalize.less";
body {
    min-width: 1000px;
}

a {
    color: inherit;
    text-decoration: none;
}

.bg {
    position: absolute;
    top: 0;
    bottom: 0;
    right: 0;
    left: 0;
    min-width: 1000px;
    background: url(../img/entry-bg.jpg) center no-repeat;
    background-size: cover;
}

.esee-model {
    float: left;
    h2 {
        color: #FFFFFF;
    }
}

.esee-kid {
    float: right;
    h2 {
        color: #000000;
    }
}

.esee-model,
.esee-kid {
    position: relative;
    //  float: left;
    width: 50%;
    height: 100%;
    a {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        display: block;
        height: 290px;
        width: 360px;
        text-align: center;
        img {
            position: relative;
            top: 0;
            height: 80px;
            margin-bottom: 40px;
        }
        h2 {
            position: relative;
            top: 0;
            margin-top: 0;
            margin-bottom: 80px;
            font-size: 26px;
            font-weight: normal;
        }
        p {
            height: 40px;
            width: 120px;
            margin: 0 auto;
            color: #A0A0A0;
            font-size: 18px;
            line-height: 40px;
        }
    }
    a:hover {
        img {
            top: -10px;
            transition-duration: 0.5s;
        }
        h2 {
            top: -10px;
            transition-duration: 0.5s;
        }
        p {
            line-height: 40px;
            color: #fff;
            background: #CBA06B;
            box-shadow: 5px 5px 5px rgba(0, 0, 0, 0.3);
            transition-duration: 0.5s;
        }
    }
}