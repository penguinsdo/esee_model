/*!
 * header component
 */
.header {
    height: 100px;
    border-bottom: 1px solid #A0A0A0;
    .container {
        height: 100%;
        .logo {
            height: 43px;
            width: 150px;
            position: relative;
            top: 33px;
            background-image: url(../img/header-logo.png);
            a {
                display: block;
                height: 100%;
                width: 100%;
            }
        }
        .nav {
            margin-top: 0;
            position: absolute;
            right: 0;
            top: 50%;
            transform: translateY(-50%);
            li {
                float: left;
                padding-left: 0;
                margin-left: 80px;
                list-style: none;
                font-size: 16px;
                color: #a0a0a0;
                a {
                    padding-bottom: 0;
                }
                a:hover,
                .active {
                    color: #000000;
                    padding-bottom: 8px;
                    border-bottom: 2px solid #000000;
                    transition-duration: 0.3s;
                }
            }
        }
    }
}